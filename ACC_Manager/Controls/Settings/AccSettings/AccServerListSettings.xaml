<UserControl x:Class="ACCManager.Controls.Settings.AccSettings.AccServerListSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACCManager.Controls.Settings.AccSettings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <ToolBar Style="{DynamicResource MaterialDesignToolbar}">
                <Button>Add new</Button>
            </ToolBar>
            <Label>Known servers:</Label>
            <ListView x:Name="listViewServers" ScrollViewer.VerticalScrollBarVisibility="Auto">

            </ListView>
        </StackPanel>
        <StackPanel Grid.Column="1">

        </StackPanel>
    </Grid>
</UserControl>
